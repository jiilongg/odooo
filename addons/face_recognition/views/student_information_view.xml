<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_information_view_tree" model="ir.ui.view">
        <field name="name">student.information.view.tree</field>
        <field name="model">student.information</field>
        <field name="arch" type="xml">
            <list string="Students Information">
                <field name="name"/>
                <field name="studentid"/> 
                <field name="phone"/>
                <field name="email"/>
                <field name="address" optional="hide"/>
                <field name="city" optional="hide"/>
                <field name="zip" optional="hide"/>  
                <field name="gender" optional="hide"/>
                <field name="date_of_birth" optional="hide"/>
                <field name="shift_id" optional="hide"/>
                <field name="face_image" string="Student Image" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="student_information_view_form" model="ir.ui.view">
        <field name="name">student.information.view.form</field>
        <field name="model">student.information</field>
        <field name="arch" type="xml">
            <form string="Student Information"> 
                <sheet> 
                    <div class="oe_title oe_inline"> 
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="studentid"/> 
                            <field name="shift_id"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="zip"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/> 
                        </group>  
                    </group>
                    <notebook>
                        <page name="student_profile" string="Student Profile">
                            <group>
                                <field name="face_image" widget="image" nolabel="1" options="{'preview_image': 'face_image', 'size': [300, 300]}"/>
                            </group>
                            <button name="capture_and_train_face" type="object" string="Capture Face" class="btn-primary" icon="fa-camera" style="margin-top: 15px;"/>
                        </page>
                        <page name="internal_note" string="Internal Note">
                            <group>
                                <field name="internal_note" widget="html" nolabel="1"/>
                            </group>
                        </page> 
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
 
</odoo>
