<odoo>

    <record id="student_attendance_view_tree" model="ir.ui.view">
        <field name="name">student.attendance.view.tree</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <list string="Student Attendance" create="false">
                <field name="name"/>
                <field name="student_id"/> 
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="status"/> 
                <field name="shift_id" optional="hide"/>
                <field name="check_in_status" optional="hide"/>
                <field name="check_out_status" optional="hide"/>
            </list>
        </field>
    </record>
  
    <record id="view_student_attendance_form" model="ir.ui.view">
        <field name="name">student.attendance.form</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <form string="Student Attendance" create="false"> 
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="checked_in,checked_out"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group> 
                        <group>
                            <field name="student_id"/>
                            <field name="check_in"/>
                            <field name="check_out"/> 
                        </group>
                        <group>
                            <field name="check_in_status"/>
                            <field name="check_out_status"/>
                            <field name="shift_id"/>
                        </group> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
